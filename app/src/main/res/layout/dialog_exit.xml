<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="225dp"
        android:background="@drawable/dialog_box_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_montserrat"
            android:text="Are you sure?"
            android:textAlignment="center"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/sad_emoji" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_montserrat"
            android:text="You'll loose all progress"
            android:textAlignment="center"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positive"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/negative_dialog_button_background"
                android:fontFamily="sans-serif-black"
                android:text="I'm Sure" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:background="@drawable/neutral_dialog_button_background"
                android:fontFamily="sans-serif-black"
                android:text="Save Game" />

            <Button
                android:id="@+id/negative"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/positive_dialog_button_background"
                android:fontFamily="sans-serif-black"
                android:text="Keep Playing" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>